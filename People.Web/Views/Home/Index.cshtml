@model PeopleViewModel

<div class="row">
    <div class="offset-md-2">
        <form action="/home/peopleform">
            <button class="btn btn-success">Add People</button>
        </form>
    </div>
    <div class="col-md-8 offset-md-2">
        <table class="table table-hover table-bordered table-striped">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Age</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model.People)
                {
                    <tr>
                        <td>@p.FirstName</td>
                        <td>@p.LastName</td>
                        <td>@p.Age</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>